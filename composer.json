{
    "name": "happyhippyhippo/php-api-bundle",
    "description": "Symfony bundle used to provide the base services for an api",
    "type": "symfony-bundle",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "composer/package-versions-deprecated": "^1.11",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "guzzlehttp/guzzle": "^7.2",
        "happyhippyhippo/php-skeleton-bundle": "^1.0",
        "symfony/console": "^6.0",
        "symfony/doctrine-bridge": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/flex": "^2.0",
        "symfony/framework-bundle": "^6.0",
        "symfony/monolog-bundle": "^3.6",
        "symfony/proxy-manager-bridge": "^6.0",
        "symfony/serializer": "^6.0",
        "symfony/validator": "^6.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/browser-kit": "^6.0"
    },
    "repositories": [
        {
            "name": "happyhippyhippo/php-skeleton-bundle",
            "type": "git",
            "url": "git@github.com:HappyHippyHippo/php-skeleton-bundle.git"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Hippy\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hippy\\Api\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.0"
        }
    }
}
